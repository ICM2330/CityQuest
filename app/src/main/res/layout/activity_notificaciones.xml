<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TiendaDePuntos"
    android:background="@drawable/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/headeramarillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ToolbarTheme"
        app:menu="@menu/menu_toolbar">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/bell_icon"
        android:layout_width="222dp"
        android:layout_height="131dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:srcCompat="@drawable/bell"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:id="@+id/notification_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bell_icon">

        <TextView
            android:id="@+id/notification_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification 1: Se Ha agregado un Nuevo Punto de interes."
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/notification_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification 2: @Usuario Ha comentado en tu Post."
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/notification_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification 3: Se Han agregado 100 Puntos a tu cuenta."
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/notification_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification 4: @Usuario Le a dado Like a tu Post."
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
